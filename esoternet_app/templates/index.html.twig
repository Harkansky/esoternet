{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section>
        <nav class="flex space-x-6 text-gray-400 font-medium">
            <a href="{{ path('register') }}" class="hover:text-gray-700">Register</a>
            <a href="{{ path('page_login') }}" class="hover:text-gray-700">Login</a>
            <form method="POST" action="{{ path('page_logout') }}">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button type="submit">Logout</button>
            </form>
        </nav>
    </section>
{% endblock %}
