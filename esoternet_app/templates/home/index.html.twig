{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4">
        <div class="hero bg-base-200 my-8">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">{{ title }}</h1>
                    <p class="py-6">Découvrez nos produits incroyables à des prix compétitifs !</p>
                    <a href="/shop" class="btn btn-primary">Voir les produits</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card w-96 bg-base-100 shadow-xl">
        <figure><img src="https://via.placeholder.com/150" alt="Produit"></figure>
        <div class="card-body">
            <h2 class="card-title">Produit cool</h2>
            <p>Description sympa de ton produit.</p>
            <div class="card-actions justify-end">
                <button class="btn btn-primary">Ajouter au panier</button>
            </div>
        </div>
    </div>

{% endblock %}
